<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".scene1"
        android:background="@drawable/menu_cave"
>

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:textSize="40sp"
              android:layout_marginTop="20dp"
              android:id="@+id/enemy_title"
              android:text=""
              android:textColor="@color/red"
              android:textAlignment="center"
              android:layout_marginRight="10dp"
              android:layout_marginLeft="10dp"
    />
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:text=""
              android:textColor="@color/green"
              android:textSize="30sp"
              android:layout_below="@+id/enemy_title"
              android:layout_marginTop="20dp"
              android:textAlignment="center"
              android:id="@+id/enemyHealth"
              android:layout_marginRight="10dp"
              android:layout_marginLeft="10dp"

    />

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:layout_below="@+id/enemyHealth"
              android:textSize="30sp"
              android:layout_marginTop="60dp"
              android:paddingBottom="200dp"
              android:textAlignment="center"
              android:text=""
              android:id="@+id/battle_text"
              android:layout_marginRight="10dp"
              android:layout_marginLeft="10dp"
              android:textColor="@color/white"
    />
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:layout_below="@+id/enemyHealth"
              android:textSize="30sp"
              android:layout_marginTop="60dp"
              android:paddingBottom="200dp"
              android:textAlignment="center"
              android:text=""
              android:id="@+id/enemy_text"
              android:layout_marginRight="10dp"
              android:layout_marginLeft="10dp"
              android:textColor="@color/white"
    />
    <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:layout_marginBottom="100dp"
    >
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"

                  android:textSize="40sp"
                  android:layout_marginBottom="20dp"
                  android:layout_marginRight="10dp"
                  android:layout_marginLeft="10dp"
                  android:textColor="@color/blue"
                  android:text="Player"
                  android:textAlignment="center"
                  android:id="@+id/playerTitle"
                  android:layout_above="@+id/heroHealth"
        />

        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:text=""
                  android:textColor="@color/green"
                  android:textSize="30sp"
                  android:layout_marginBottom="20dp"
                  android:textAlignment="center"
                  android:id="@+id/heroHealth"
                  android:layout_marginRight="10dp"
                  android:layout_marginLeft="10dp"
                  android:layout_alignParentBottom="true"
        />
    </RelativeLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_alignParentBottom="true"
                  android:layout_marginBottom="20dp"
                  android:weightSum="6"
    >
        <Button android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:text="Slash"
                android:layout_weight="3"
                android:fontFamily="sans-serif-medium"
                android:id="@+id/attack_button"

        />
        <Button android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:text="Heal"
                android:layout_weight="3"
                android:layout_marginRight="10dp"
                android:fontFamily="sans-serif-medium"
                android:id="@+id/heal_button"

        />

    </LinearLayout>


</RelativeLayout>